{
  "machine": [
    {
      "version": "0.0.0",
      "install": [
        "sensu-plugins-load-checks",
        "sensu-plugins-memory-checks",
        "sensu-plugins-disk-checks"
      ],
      "measurements": [
        {
          "name": "cpu_load",
          "script": "check-load.rb"
        },
        {
          "name": "memory",
          "script": "metrics-memory.rb"
        },
        {
          "name": "disk",
          "script": "metrics-disk-usage.rb"
        }
      ]
    }
  ]
}
