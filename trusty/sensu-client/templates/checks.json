{
  "checks": { {% for check in checks %}
    "{{check.type}}": {
      "command": "{{check.script}}",
      "standalone": true,
      "interval": 5,
      "type": "metric",
      "subscribers": ["{{check.subscribers}}"],
      "aggregate": "{{check.charm}}"
    }{%- if not loop.last %},{% endif %}{% endfor %}
  }
}
